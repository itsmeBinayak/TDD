{% extends 'base.html.twig' %}

{% block title %}Hello RoomController!{% endblock %}

{% block body %}
<div class="container">
		<h2>Rooms</h2>
		<br>

		<table class="table table-hover table-dark ">
			<thead>
				<tr>
					<td>Room Nr.</td>
					<td>Name</td>
					<td>Premium Room</td>
					<td></td>
				</tr>
			</thead>

			<tbody>
				{% for room in rooms %}
					<tr>
						<td>{{room.id}}</td>
						<td>{{room.name}}</td>
						<td>{{room.onlyForPremiumMembers}}</td>	
                        <td><a class="btn btn-outline-danger btn-sm" href={{ path('booking')}} role="button">Book</a></td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
